@{
    ViewData["title"] = "Auction";
    Layout = "_UserLayout";
}
@model IEnumerable<ArtGallery.Models.AuctionView>

<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Auction</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item"><a href="#">Pages</a></li>
        <li class="breadcrumb-item active text-white">Auction</li>
    </ol>
</div>
<div class="container my-5">
    <h1 class="text-center">Auctions</h1>
    <div class="row">
        @foreach (var auction in Model)
        {
            <div class="col-md-12 mb-4">
                <div class="card">
                    <div class="row no-gutters">
                        <div class="col-md-4">
                            <img src="@auction.ImageURL" class="card-img" alt="@auction.ArtworkTitle">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">@auction.ArtworkTitle</h5>
                                <p class="card-text">Start Date: @auction.StartDate.ToString("d")</p>
                                <p class="card-text">End Date: @auction.EndDate.ToString("d")</p>
                                <p class="card-text">Starting Price: @auction.StartingPrice.ToString("C")</p>
                                <p class="card-text">Current Bid: @auction.CurrentBid.ToString("C")</p>
                                <form asp-action="PlaceBid" method="post">
                                    <div class="form-group">
                                        <label for="newBid">Your Bid</label>
                                        <input type="number" name="NewBid" class="form-control" min="@auction.CurrentBid" step="0.01" required />
                                    </div>
                                    <input type="hidden" name="AuctionId" value="@auction.AuctionId" />
                                    <button type="submit" class="btn btn-primary mt-2">Place Bid</button>
                                </form>
                                <a href="@Url.Action("Edit", new { id = auction.AuctionId })" class="btn btn-warning mt-2">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="@Url.Action("Delete", new { id = auction.AuctionId })" class="btn btn-danger mt-2">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>